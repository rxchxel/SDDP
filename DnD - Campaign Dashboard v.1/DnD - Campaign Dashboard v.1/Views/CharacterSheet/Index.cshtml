@model IEnumerable<DnD___Campaign_Dashboard_v._1.Models.Character>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">

<h2>Character Index</h2>


<p>
    @Html.ActionLink("Create New", "New", null, new { @class = "btn btn-primary" } )
</p>
<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.charname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.classlevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.background)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.playername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.experiencepoints)
            </th>
            <th></th>

        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.charname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Campaign_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.classlevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.background)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.playername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.alignment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.experiencepoints)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("View", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

    <script src='https://code.jquery.com/jquery-3.5.1.js'></script>
    <script src='https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js'></script>

}