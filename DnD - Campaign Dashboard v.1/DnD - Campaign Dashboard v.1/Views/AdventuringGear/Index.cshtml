
@{ ViewBag.Title = "Adventuring Gear";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Adventuring Gear</h2>
<table id="adventureGears" class="table table-bordered table-hover">
    <thead>
        <tr>

            <th>Adventure Gear</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: 'https://www.dnd5eapi.co/api/equipment-categories/adventuring-gear',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    bindtoDatatable(data.equipment);
                }
            });
        });
        function bindtoDatatable(data) {
            var table = $('#adventureGears').dataTable({
                "bAutoWidth": true,
                "aaData": data,
                "columns": [

                    {
                        "data": "name"
                    },
                    {
                        "data": "index",
                        render: function (data) {
                            return "<a href='../AdventuringGear/Details/" + data + "'>Details</a>"
                        }
                    }
                ]
            });
        }
    </script>
}