
@{ ViewBag.Title = "Adventuring Gear";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Adventuring Gear</h2>
<table id="adventuringgear" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Gear Name</th>
            <th>Gear Category</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#adventuringgear").DataTable({
                ajax: {
                    url: "/api/adventuringgearsapi",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "gearCategory"
                    }
                ]
            });
        });
    </script>
}
